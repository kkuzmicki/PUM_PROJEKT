<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profile_photo"
            android:layout_marginTop="20dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_photo"
            android:id="@+id/linLayout">

            <include layout="@layout/top_profile_part"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linLayout"
            android:id="@+id/linLayout2"
            android:padding="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/display_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Profile"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:text="Describe yourself"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>

            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout4"
            android:layout_below="@id/linLayout2"
            android:background="@color/darkish">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/profilePhotoGridView"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_clickhere"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/relLayout4"
            android:id="@+id/linLayout3"
            android:padding="10dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_flag"
                    android:id="@+id/flagIcon"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nationality"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/flagIcon"
                    android:textColor="@color/blue"
                    android:text="ProfileNationality"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    </ScrollView>

</merge>